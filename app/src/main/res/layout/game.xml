<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gametable">


    <Button
        android:text="@string/quit"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button4"
        android:layout_alignBottom="@+id/btnStand"
        android:layout_toRightOf="@+id/button4"
        android:layout_marginLeft="15dp"
        android:id="@+id/button5" />


    <Button
        android:text="@string/draw"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btnHit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/stand"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnStand"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/btnHit"
        android:layout_alignBottom="@+id/btnHit"
        android:layout_toRightOf="@+id/btnHit"
        android:layout_toEndOf="@+id/btnHit"
        android:visibility="visible" />


    <Button
        android:text="@string/reset"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_alignBaseline="@+id/btnStand"
        android:layout_alignBottom="@+id/btnStand"
        android:layout_toRightOf="@+id/btnStand"
         />

    <Button
        android:background="@drawable/chip_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/btnMoneyOne"
        android:layout_alignBottom="@+id/btnNextHand" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPurse"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Play Next Hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNextHand"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnStand"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:text="@string/player"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnMoneyOne"
        android:layout_alignStart="@+id/btnMoneyOne" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:id="@+id/imageView"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:id="@+id/imageView2"
        android:paddingLeft="15dp"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:id="@+id/imageView3"
        android:paddingLeft="30dp"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:id="@+id/imageView4"
        android:paddingLeft="45dp"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Bet: $0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBet"
        android:layout_below="@+id/tvPurse"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/dealer"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="@string/empty"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvPlayerHand"
        android:layout_above="@+id/btnMoneyOne"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="85dp" />

    <TextView
        android:text="@string/empty"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="@string/empty"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:id="@+id/imageView5"
        android:paddingLeft="60dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/chip_500"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnMoney500"
        android:layout_above="@id/button5"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/btnMoney100"
        android:layout_toEndOf="@+id/btnMoney100" />

    <Button
        android:background="@drawable/chip_100"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnMoney100"
        android:layout_above="@id/button4"
        android:layout_toRightOf="@id/btnStand"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="-5dp"/>

    <Button
        android:background="@drawable/chip_10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnMoney10"
        android:layout_above="@id/btnStand"
        android:layout_marginBottom="19dp"
        android:layout_toRightOf="@+id/btnMoneyOne"
        android:layout_toEndOf="@+id/btnMoneyOne" />

    <Button
        android:text="Deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/empty"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvDealerHand"
        android:layout_alignBaseline="@+id/tvPlayerHand"
        android:layout_alignBottom="@+id/tvPlayerHand"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView6" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView7" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="15dp"
        android:id="@+id/imageView8" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="30dp"
        android:id="@+id/imageView9" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="45dp"
        android:id="@+id/imageView10" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_below="@+id/tvBet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="60dp"
        android:id="@+id/imageView11" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/btnDeal"
        android:layout_alignStart="@+id/btnDeal" />


</RelativeLayout>