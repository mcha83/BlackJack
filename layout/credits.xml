<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/devops"
        android:textStyle="bold"
        android:textSize="70px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crdTxt2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="36dp" />

    <TextView
        android:text="@string/developers"
        android:textStyle="bold"
        android:textSize="70px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/crdTxt1"
        android:layout_below="@+id/crdTxt2"
        android:layout_alignLeft="@+id/crdTxt2"
        android:layout_alignStart="@+id/crdTxt2" />

    <Button
        android:text="@string/backButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButt"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>